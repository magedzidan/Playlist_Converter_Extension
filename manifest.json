{
  "manifest_version": 3,
  "name": "Wikipedia Summarizer",
  "version": "1.0",
  "description": "A Chrome extension to summarize Wikipedia pages.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background":{
    "service_worker":"background.js"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": "assests/logo.jpg"
  },
  "icons":{
      "16":"assests/logo.jpg",
      "48":"assests/logo.jpg",
      "128":"assests/logo.jpg"
  }
}
